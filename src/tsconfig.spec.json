{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "module": "commonjs",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "../node_modules/arsnova-click-v2-types/dist/**/*.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "main.ts"
  ],
  "paths": {
    "@app/*": [
      "app/*"
    ],
    "@env/*": [
      "environments/*"
    ]
  }
}
