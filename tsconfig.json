{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  },
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/arsnova-click-v2-types/src"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
